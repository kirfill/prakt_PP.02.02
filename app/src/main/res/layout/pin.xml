<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/street_facade_of_the_1"
    tools:context=".MainActivity">
    <LinearLayout
        android:background="#8030CCE1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">



    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/logo_1" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Создайте пин-код"
        android:textSize="30dp"
    android:textColor="#FFFFFF" />

    <LinearLayout
        android:alpha="0.9"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:padding="15dp"
        android:orientation="vertical"
        android:background="@drawable/layout_beg_white_bl">

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"

            android:padding="15dp"
            >
            <Button
                android:id="@+id/buttonPIN1"

                android:layout_width="90dp"
                android:layout_height="90dp"
                style="@style/abod_bleck"
                android:textColor="#000000"
                android:text="1"
                android:textSize="25dp" />

            <Button
                android:id="@+id/buttonPIN2"
                style="@style/abod_bleck"
                android:textColor="#000000"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginLeft="10dp"

                android:text="2"
                android:textSize="25dp" />
            <Button
                android:id="@+id/buttonPIN3"
                style="@style/abod_bleck"
                android:textColor="#000000"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginLeft="10dp"

                android:text="3"
                android:textSize="25dp" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"

            android:padding="15dp">
            <Button
                android:id="@+id/buttonPIN4"
                style="@style/abod_bleck"
                android:textColor="#000000"
                android:layout_width="90dp"
                android:layout_height="90dp"


                android:text="4"
                android:textSize="25dp" />

            <Button
                android:id="@+id/buttonPIN5"
                style="@style/abod_bleck"
                android:textColor="#000000"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginLeft="10dp"

                android:text="5"
                android:textSize="25dp" />
            <Button
                android:id="@+id/buttonPIN6"
                style="@style/abod_bleck"
                android:textColor="#000000"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginLeft="10dp"

                android:text="6"
                android:textSize="25dp" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"

            android:padding="15dp">
            <Button
                android:id="@+id/buttonPIN7"
                style="@style/abod_bleck"
                android:textColor="#000000"
                android:layout_width="90dp"
                android:layout_height="90dp"


                android:text="7"
                android:textSize="25dp" />

            <Button
                android:id="@+id/buttonPIN8"
                style="@style/abod_bleck"
                android:textColor="#000000"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginLeft="10dp"

                android:text="8"
                android:textSize="25dp" />
            <Button
                android:id="@+id/buttonPIN9"
                style="@style/abod_bleck"
                android:textColor="#000000"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginLeft="10dp"

                android:text="9"
                android:textSize="25dp" />


        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/button3"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:textSize="25dp"
        android:text="Сохранить"
        android:layout_marginTop="20dp"
        style="@style/CustomButtonStyleGR"/>
    </LinearLayout>


</LinearLayout>
